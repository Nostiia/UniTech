@model UniTech.Models.Post

@{
    ViewData["Title"] = "Edit";
}

<h1 class="center">Edit</h1>

<h4 class="center">Post</h4>
<hr />
<div class="center">
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Post_Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Topic" class="control-label"></label>
                <input asp-for="Topic" class="form-control" />
                <span asp-validation-for="Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Search_hucks" class="control-label"></label>
                <input asp-for="Search_hucks" class="form-control" />
                <span asp-validation-for="Search_hucks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post_text" class="control-label"></label>
                <textarea asp-for="Post_text" class="form-control autosize-textarea"></textarea>
                <span asp-validation-for="Post_text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
