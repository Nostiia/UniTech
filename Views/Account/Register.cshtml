@{
    ViewData["Title"] = "Register Page";
}
@model UniTech.ViewsModels.RegisterViewModel


<h2 class="center">Registration</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email">Enter Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Username">Enter Username</label><br />
            <input type="text" asp-for="Username" />
            <span asp-validation-for="Username" />
        </div>
        <div>
            <label asp-for="Role">Choose Role</label><br />
            @Html.DropDownListFor(model => model.Role,
                     new SelectList(ViewBag.Roles),
                     "Select a role")
            <span asp-validation-for="Role" />
        </div>
        <div>
            <label asp-for="Password">Enter password</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Confirm Password</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="form-actions">
            <input type="submit" value="Register" class="btn btn-primary" />
            <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-secondary">Already have an account</a>
        </div>
    </div>
</form>
